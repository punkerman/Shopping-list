<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.redrex.alejandrobedoya.shoppinglist.CategoriesActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meat"
        android:onClick="meatBtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/carnesjpeg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drinks"
        android:onClick="drinksBtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/drinks"
        android:layout_below="@+id/meat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pastaBtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/pasta"
        android:layout_below="@+id/drinks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
