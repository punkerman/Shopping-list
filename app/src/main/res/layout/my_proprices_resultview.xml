<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgPromPrices"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView1PromPrices"
        android:textColor="#000000"
        android:layout_below="@+id/textView2PromPrices"
        android:layout_alignLeft="@+id/textView2PromPrices"
        android:layout_alignStart="@+id/textView2PromPrices"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="#000000"
        android:id="@+id/textView2PromPrices"

        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3PromPrices"
        android:layout_toEndOf="@+id/textView3PromPrices"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textColor="#000000"
        android:id="@+id/textView3PromPrices"
        android:layout_below="@+id/imgPromPrices"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Puntos"
        android:textColor="#000000"
        android:id="@+id/textViewExtra"
        android:layout_alignBottom="@+id/textView3PromPrices"
        android:layout_toRightOf="@+id/textView3PromPrices"
        android:layout_toEndOf="@+id/textView3PromPrices" />
</RelativeLayout>