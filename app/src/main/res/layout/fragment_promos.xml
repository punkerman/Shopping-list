<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.redrex.alejandrobedoya.shoppinglist.PromosActivity$PlaceholderFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/exampleTextView"
        android:layout_alignTop="@+id/textViewA1"
        android:layout_toRightOf="@+id/textViewA1"
        android:layout_toEndOf="@+id/textViewA1"
        android:layout_above="@+id/textViewA2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Se agregaron:"
        android:id="@+id/textViewA1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fecha:"
        android:id="@+id/textViewA2"
        android:layout_alignLeft="@+id/textViewA1"
        android:layout_alignStart="@+id/textViewA1"
        android:layout_below="@+id/textViewA1"
        android:layout_toLeftOf="@+id/exampleTextView"
        android:layout_toStartOf="@+id/exampleTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/exampleTextView2"
        android:layout_below="@+id/exampleTextView"
        android:layout_toRightOf="@+id/textViewA2"
        android:layout_alignRight="@+id/qrdecoderview"
        android:layout_alignEnd="@+id/qrdecoderview" />

    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:id="@+id/qrdecoderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonQR"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/camara_azul"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
